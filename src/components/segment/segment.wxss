/* components/segment/segment.wxss */
.container {
  display: flex;
  height: 32px;
  margin: 20rpx 40rpx;
  border: 1px solid #0984e3;
  align-items: center;
  justify-content: flex-start;
}

.btn {
  flex: 1;
  height: 100%;
  font-size: 10px;
  color: #0984e3;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0;
}

/* 去掉边框 */
.btn::after {
  display: none;
}

.select {
  color: white;
  background-color: #0984e3;
}