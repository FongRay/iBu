/**index.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 0 0;
  box-sizing: border-box;
  background-image: url('https://gw.alipayobjects.com/zos/rmsportal/dmAdiqtGfHXqPhQnOwPG.png');
  background-size: 100% 100%;
} 

.userinfo {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  width: 100%;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #f39c12;
}

.start {
  flex: 1;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.start-btn {
  margin-top: 80rpx;
  border: 8rpx dashed #9b59b6;
  border-radius: 24rpx;
  width: 80%;
  height: 128rpx;
}