/* list.wxss */
page {
  background-color: #2980b9;
}

.container {
  background-color: #2980b9;
  padding-left: 24rpx;
  padding-right: 24rpx;
}

scroll-view {
  background-color: #2980b9;
  display: flex;
  justify-content: space-between;
}

.card_div {
  min-height: 400px;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.card {
  margin: 12rpx 24rpx;
}

card:first-child {
  margin-top: 40rpx;
}

.add_div {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 24rpx;
}

.add {
  width: 64px;
  height: 64px;
}